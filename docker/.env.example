# ClawDaemon — Docker environment template
# Copy to .env and fill in your values:
#   cp .env.example .env

# ── Server ────────────────────────────────────────────────
PORT=8080
WORK_DIR=/data
DB_PATH=/data/clawdaemon.db
CHARACTER_DIR=/data/character
SCREENSHOTS_DIR=/data/screenshots

# ── Admin account ─────────────────────────────────────────
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme          # CHANGE THIS

# ── Security ──────────────────────────────────────────────
JWT_SECRET=                      # leave blank to auto-generate
SESSION_EXPIRY_HOURS=24
BRUTE_FORCE_MAX_ATTEMPTS=5
BRUTE_FORCE_BLOCK_MINUTES=15

# ── Telegram (optional) ───────────────────────────────────
TELEGRAM_TOKEN=                  # from @BotFather
TELEGRAM_CHAT_ID=                # your chat ID

# ── DuckDNS (optional, for free HTTPS domain) ─────────────
DUCKDNS_TOKEN=
DUCKDNS_DOMAIN=
